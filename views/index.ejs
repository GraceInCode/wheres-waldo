<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Where's Waldo</title>
  <style>
    body {
      max-width: 100%;
      height: auto;
      display: block;
      object-fit: contain;
      cursor: crosshair;
    }
    Â·timer {
      position: absolute;
      top: 10px;
      right: 10px;
      background: rgba(255, 255, 255, 0.8);
      padding: 5px 10px;
      border-radius: 5px;
      font-size: 18px;
      z-index: 10;
    }
    #find-list {
      position: absolute;
      top: 50px;
      right: 10px;
      background: rgba(255, 255, 255, 0.7);
      padding: 10px;
      border-radius: 5px;
      max-width: 150px;
      z-index: 10;
      transition: opacity 0.3s;
    }
    #find-list:hover { opacity: 1; background: rgba(255, 255, 255, 1); }
    #find-list ul { list-style: none; padding: 0; margin: 0; }
    #find-list li { display: flex; align-items: center; margin-bottom: 5px; }
    #find-list .char-img { width: 30px; height: 30px; border-radius: 50%; margin-right: 10px; }
    #markers { position: absolute; top: 0; left: 0; width: 100%; height: 100%; pointer-events: none; z-index: 5; }
    #target-box {
      position: absolute;
      display: none;
      border: 2px solid red;
      background: white;
      padding: 10px;
      z-index: 1000;
      max-height: 200px;
      overflow-y: auto;
    }
    .char-list { display: flex; flex-direction: column; gap: 5px; }
    .char-option { display: flex; align-items: center; padding: 5px; cursor: pointer; border: 1px solid #ddd; border-radius: 4px; }
    .char-option:hover { background: #f0f0f0; }
    .char-option .char-img { width: 30px; height: 30px; margin-right: 10px; border-radius: 50%;}
  </style>
</head>
<body>
  <div id="game-container">
    <img id="photo" src="<%= imageUrl %>" alt="Find them">
    <div id="timer">Time: 0:00</div>
    <div id="find-list">
      <h3>Find These:</h3>
      <ul>
        <% characters.forEach(char => { %>
          <li class="character-item" data-char-id="<%= char.id %>">
            <img src="<%= char.imageUrl %>" class="char-img" alt="<%= char.name %>">
            <%= char.name %>
          </li>
        <% }); %>
      </ul>
    </div>
    <div id="markers"></div>
    <div id="target-box">
      <div id="char-list" class="char-list">
        <% characters.forEach(char => { %>
          <div class="char-option" data-char-id="<%= char.id %>">
            <img src="<%= char.imageUrl %>" class="char-img" alt="<%= char.name %>">
            <%= char.name %>
          </div>
        <% }); %>
      </div>
    </div>
  </div>
  <script src="/script.js"></script>
</body>
</html>